{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es2021"],
        "outDir": "build",
        "allowJs": true,
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "declaration": true
    },
    "rules": {
        "triple-equals": true,
        "curly": true,
        "strict-boolean-expressions": true,
        "no-unnecessary-condition": true
    },
}
